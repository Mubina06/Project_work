<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:weightSum="4"
    android:background="#9245F3">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:layout_weight="0.1">

        <TextView
            android:id="@+id/textView"
            android:layout_width="wrap_content"
            android:layout_height="50dp"
            android:layout_weight="1"
            android:textAlignment="center"
            android:textSize="35sp"
            android:textColor="@color/white"
            android:textStyle="bold"
            android:text="Choose one of them" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:weightSum="2"
        android:orientation="horizontal"
        android:layout_weight="1.3">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:weightSum="2"
            android:gravity="center"
            android:orientation="vertical"
            android:layout_weight="1">

            <androidx.constraintlayout.utils.widget.ImageFilterView
                android:id="@+id/img1"
                android:layout_width="160dp"
                android:layout_height="150dp"
                android:background="@color/white"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:roundPercent="1"
                android:scaleType="centerCrop"
                app:srcCompat="@drawable/characters" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Character's name"
                android:textAlignment="center"
                android:textColor="@color/white"
                android:textSize="22sp"
                android:textStyle="italic"
                android:layout_weight="1"/>


        </LinearLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:weightSum="2"
            android:gravity="center"
            android:orientation="vertical"
            android:layout_weight="1">

            <androidx.constraintlayout.utils.widget.ImageFilterView
                android:id="@+id/img2"
                android:layout_width="160dp"
                android:layout_height="150dp"
                android:background="@color/white"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:roundPercent="1"
                android:scaleType="centerCrop"
                app:srcCompat="@drawable/cars" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Cartoons about cars"
                android:textAlignment="center"
                android:textColor="@color/white"
                android:textSize="22sp"
                android:textStyle="italic"
                android:layout_weight="1"/>


        </LinearLayout>



    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:weightSum="2"
        android:orientation="horizontal"
        android:layout_weight="1.3">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:weightSum="2"
            android:orientation="vertical"
            android:gravity="center"
            android:layout_weight="1">

            <androidx.constraintlayout.utils.widget.ImageFilterView
                android:id="@+id/img3"
                android:layout_width="160dp"
                android:layout_height="150dp"
                android:background="@color/white"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:roundPercent="1"
                android:scaleType="centerCrop"
                app:srcCompat="@drawable/boys" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Cartoons for boys"
                android:textAlignment="center"
                android:textColor="@color/white"
                android:textSize="22sp"
                android:textStyle="italic"
                android:layout_weight="1"/>


        </LinearLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:weightSum="2"
            android:orientation="vertical"
            android:gravity="center"
            android:layout_weight="1">

            <androidx.constraintlayout.utils.widget.ImageFilterView
                android:id="@+id/img4"
                android:layout_width="160dp"
                android:layout_height="150dp"
                android:background="@color/white"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:roundPercent="1"
                android:scaleType="centerCrop"
                app:srcCompat="@drawable/girls" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Cartoons for girls"
                android:textAlignment="center"
                android:textColor="@color/white"
                android:textSize="22sp"
                android:textStyle="italic"
                android:layout_weight="1"/>


        </LinearLayout>



    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:weightSum="2"
        android:orientation="horizontal"
        android:layout_weight="1.3">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:weightSum="2"
            android:orientation="vertical"
            android:gravity="center"
            android:layout_weight="1">

            <androidx.constraintlayout.utils.widget.ImageFilterView
                android:id="@+id/img5"
                android:layout_width="160dp"
                android:layout_height="150dp"
                android:background="@color/white"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:roundPercent="1"
                android:scaleType="centerCrop"
                app:srcCompat="@drawable/robot" />
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Cartoons about robots"
                android:textAlignment="center"
                android:textColor="@color/white"
                android:textSize="22sp"
                android:textStyle="italic"
                android:layout_weight="1"/>


        </LinearLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:weightSum="2"
            android:orientation="vertical"
            android:gravity="center"
            android:layout_weight="1">

            <androidx.constraintlayout.utils.widget.ImageFilterView
                android:id="@+id/img6"
                android:layout_width="160dp"
                android:layout_height="150dp"
                android:background="@color/white"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:roundPercent="1"
                android:scaleType="centerCrop"
                app:srcCompat="@drawable/animals" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Cartoons about animals"
                android:textAlignment="center"
                android:textColor="@color/white"
                android:textSize="22sp"
                android:textStyle="italic"
                android:layout_weight="1"/>


        </LinearLayout>


    </LinearLayout>



</LinearLayout>